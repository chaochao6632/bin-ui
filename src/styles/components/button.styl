.bin-button {
  display: inline-block;
  vertical-align: middle;
  line-height: $base-line-height;
  height: $default-height;
  white-space: nowrap;
  cursor: pointer;
  background: $color-white;
  border: $border-base;
  color: $color-text-default
  -webkit-appearance: none;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  margin: 0;
  transition: .2s;
  user-select: none;
  padding: 4px 15px;
  font-size: $base-font-size;
  border-radius: $border-base-radius;
  .iconfont {
    vertical-align: -1px;
    + span {
      margin-left: 4px;
    }
  }
  &-loading {
    font-size: 14px;
    margin-right: 5px;
  }
  &:hover, &:focus {
    color: $color-primary;
    border-color: $color-primary;
  }
  &.is-round {
    border-radius: 20px;
  }
  &.is-transparent {
    background: transparent;
    border-color: #fff;
    color: #fff;
    &:hover, &:focus {
      color: $color-primary;
      border-color: $color-primary;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      background: transparent;
      cursor: not-allowed;
      color: #fff;
    }
  }
  &.is-loading {
    pointer-events: none;
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    color: #c0c4cc;
    cursor: not-allowed;
    background-image: none;
    background-color: #fff;
    border-color: #ebeef5;
  }
}

.bin-button--large {
  height: $large-height;
  padding: 4px 14px;
  font-size: $header-font-size;
  &.is-round {
    padding: 4px 14px;
