    }
  }
}
.is-danger {
  background-color: $color-danger-light5;
  border-color: $color-danger-light4;
  color: $color-danger;
  .icon-ios-close {
    color: $color-danger-light1;
    &:hover {
      color: $color-danger;
    }
  }
}
.no-border {
  border: none;
  padding: 0 5px;
  line-height: $base-line-height;
  height: auto;
}
.is-small {
  height: $mini-height + 4
  line-height: $mini-height + 2
}
.is-mini {
  height: $mini-height;
  padding: 0 8px;
  line-height: $mini-height - 2;
}
.bin-dot {
  display: inline-block;
  width: 8px;
  height: 8px;
  margin-right: 5px;
  border-radius: 50%;
  background: $border-color-base;
  position: relative;
  top: 0;
}
