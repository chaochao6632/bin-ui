.bin-tag {
  display: inline-block;
  margin: 2px 4px 2px 0;
  border: $border-base;
  background: $color-bg-fa;
  font-size: $base-font-size;
  vertical-align: middle;
  opacity: 1;
  overflow: hidden;
  padding: 0 10px;
  height: 32px;
  line-height: 30px;
  border-radius: $border-base-radius;
  box-sizing: border-box;
  white-space: nowrap;
  .icon-ios-close {
    position: relative;
    right: -5px;
    top: -1px;
    cursor: pointer;
    font-size: 18px;
    color: $color-text-secondary;
    &:hover {
      color: $color-text-default;
    }
  }
}
.is-primary {
  background-color: $color-primary-light5;
  color: $color-primary;
  border: 1px solid $color-primary-light4;
  .icon-ios-close {
    color: $color-primary-light1;
    &:hover {
      color: $color-primary;
    }
  }
}
.is-success {
  background-color: $color-success-light5;
  border-color: $color-success-light4;
  color: $color-success;
  .icon-ios-close {
    color: $color-success-light1;
    &:hover {
      color: $color-success;
    }
  }
}
.is-info {
  background-color: $color-info-light5;
  border-color: $color-info-light4;
  color: $color-info;
  .icon-ios-close {
    color: $color-info-light1;
    &:hover {
      color: $color-info;
    }
  }
}
.is-warning {
  background-color: $color-warning-light5;
  border-color: $color-warning-light4;
  color: $color-warning;
  .icon-ios-close {
    color: $color-warning-light1;
    &:hover {
